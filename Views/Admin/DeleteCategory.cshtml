@model Expense_Tracker.Models.Category

@{
    ViewData["PageTitle"] = "Delete Category";
}

<h2>@ViewData["PageTitle"]</h2>

<h3>Are you sure you want to delete this category?</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="widget p-5 text-center" style="background-color:#212b36">
                <h4>@Model.Title</h4>

                <form asp-action="DeleteCategory">
                    @Html.HiddenFor(model => model.CategoryId)
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ManageCategories" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
