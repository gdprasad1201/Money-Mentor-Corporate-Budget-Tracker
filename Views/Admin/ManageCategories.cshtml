@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <h2 class="text-center mb-4 text-light">@ViewData["Title"]</h2>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead text-muted">Manage your expense categories efficiently.</p>
                <a asp-action="CreateCategory" class="btn btn-success btn-sm">
                    <i class="fas fa-plus-circle me-2"></i>Create New Category
                </a>
            </div>

            <div class="card shadow">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="bg-secondary text-light">
                            <tr>
                                <th style="width: 70%;" class="py-3 px-4">Title</th>
                                <th style="width: 30%;" class="py-3 px-4 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted py-4">
                                        No categories available. Click "Create New Category" to add one.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td class="py-3 px-4 text-light">@category.Title</td>
                                        <td class="py-3 px-4 text-center">
                                            <a asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm me-2">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <a asp-action="DeleteCategory" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0b003a;
        color: #ffffff;
    }

    .table {
        background-color: #1a222b;
    }

    .table-hover tbody tr:hover {
        background-color: #31373d;
    }

    .table thead th {
        background-color: #222b33;
        border: none;
    }

    .card {
        background-color: #222b33;
        border: none;
    }

    .card-body {
        padding: 0;
    }

    .btn-sm {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
    }

    .text-muted {
        color: #adb5bd !important;
    }
</style>
