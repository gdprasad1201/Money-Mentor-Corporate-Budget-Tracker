@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Manage Categories</h2>

<p>
    <a asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Title</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@category.CategoryId">Edit</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>