@model Expense_Tracker.Controllers.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h2 class="text-center my-4 text-white">Assign Role to @Model.UserName</h2>

<div class="container bg-dark p-4 rounded shadow">
    <form method="post" class="p-4 border rounded shadow-sm bg-dark text-white">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label for="SelectedRoles" class="form-label text-uppercase fw-bold">Select Roles:</label>
            <select name="SelectedRoles" id="SelectedRoles" class="form-select bg-secondary text-light border-0" multiple>
                @foreach (var role in Model.Roles)
                {
                    <option value="@role.Name">@role.Name</option>
                }
            </select>
            <small class="form-text text-light">Hold down the Ctrl (Windows) or Command (Mac) key to select multiple roles.</small>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary btn-lg text-uppercase">Assign Role</button>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

<style>
    body {
        background-color: #0b003a;
        color: #ffffff;
    }

    .form-select {
        background-color: #343a40; /* Matches dark theme */
        border: 1px solid #444;
        color: #ffffff;
    }

        .form-select:focus {
            border-color: #007bff;
            background-color: #495057;
        }

        .form-select option:hover {
            background-color: #000000; /* Black background on hover */
            color: #ffffff; /* White text on hover */
        }

    .form-label, .form-text {
        color: #d1d1d1;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert {
        border-radius: 0.375rem;
        padding: 1rem;
    }

    .alert-success {
        background-color: #28a745;
        color: #fff;
    }

    .alert-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>