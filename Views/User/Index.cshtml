@{
    ViewData["Title"] = "User Dashboard";
}

<style>
    body {
        background-color: #00094B; /* Dark blue background */
        color: white; /* White text color */
    }

    .widget {
        background-color: #1a222b; /* Slightly lighter for the widget */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .text-primary {
        color: #007bff; /* Primary link color */
    }

        .text-primary:hover {
            color: #0056b3; /* Darker shade for hover effect */
            text-decoration: underline; /* Underline on hover */
        }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Welcome to Your Dashboard, @ViewBag.FirstName!</h1>

    <div class="profile-container d-flex align-items-center justify-content-center">
        <!-- Profile Picture -->
        <div class="profile-pic me-4">
            <img src="@ViewBag.ProfilePictureUrl" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #007bff;" />
        </div>

        <!-- User Information -->
        <div class="profile-info text-center" style="font-size: 18px;">
            <h2 class="text-white" style="font-size: 1.5rem; font-weight: 600;">
                @ViewBag.FirstName @ViewBag.LastName
            </h2>
            <p class="text-white" style="font-size: 1rem;">
                Email: @User.Identity.Name
            </p>
            @* Uncomment if you want to add an Edit Profile button *@
            @* <a href="/User/Edit" class="btn btn-success" style="margin-top: 15px;">Edit Profile</a> *@
        </div>
    </div>
</div>
